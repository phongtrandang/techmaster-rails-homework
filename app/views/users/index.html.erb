<!DOCTYPE html>
<html>
<head>
	<title>User List</title>
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Users list</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li class="active"><a href="#">User</a></li>
          <li><a href="#">Help</a></li>
          <li><a href="#">Log in</a></li>
        </ul>
      </div>
    </nav>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Address</th>
          <th>Created at</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user|%>
        <tr>
          <td><%= user.first %></td>
          <td><%= user.last %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.created_at %></td>
          <td><%= user.balance %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <!-- page paginate link -->
  <div class="row">
    <div class="col-md-8 col-md-offset-5"><%= will_paginate @users %></div>
  </div>
  <!-- end paginate link -->
</div>
</body>
</html>