<!DOCTYPE html>
<html>
<head>
	<title>User List</title>
</head>
<body>
<div class="container-fluid">
  <%render 'navbar'%>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Address</th>
          <th>Created at</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user|%>
        <tr>
          <td><%= user.first %></td>
          <td><%= user.last %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.created_at %></td>
          <td><%= user.balance %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <!-- page paginate link -->
  <div class="row">
    <div class="col-md-8 col-md-offset-5"><%= will_paginate @users %></div>
  </div>
  <!-- end paginate link -->
</div>
</body>
</html>